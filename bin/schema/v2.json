            "type": "string",
            "enum": ["extension"]
          },
          "subtype": {
            "type": "string",
            "enum": ["chrome", "firefox", "safari", "visualstudio", "vscode", "sublime", "atom", "vim", "emacs"]
          },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "source": { "type": "string", "format": "uri" }
        },
        "required": ["type", "subtype", "name"]
      },
      "dev": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["dev"]
          },
          "subtype": {
            "type": "string",
            "enum": ["api", "data", "script", "library"]
