  "definitions": {
    "product": {
      "website": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["website"]
          },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "source": { "type": "string", "format": "uri" }
        },
        "required": ["type", "name"]
      },
      "app": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["app"]
          },
          "subtype": {
            "type": "string",
            "enum": ["android", "ios", "firefox", "desktop"]
          },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "source": { "type": "string", "format": "uri" }
        },
        "required": ["type", "subtype", "name"]
      },
      "bot": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["bot"]
          },
          "subtype": {
            "type": "string",
            "enum": ["facebook", "line", "slack", "telegram", "wechat"]
          },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "source": { "type": "string", "format": "uri" }
        },
        "required": ["type", "subtype", "name"]
      },
      "extension": {
