{
  "id": "https://raw.githubusercontent.com/g0v/ambassador/master/bin/schema/v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "author"
  ],
  "properties": {
    "author": {
      "title": "專案作者",
      "description": "Project author",
      "type": "string",
      "minLength": 1
    },
    "status": {
      "title": "專案狀態",
      "description": "Project status",
      "type": "string",
      "enum": [
        "Planning",
        "planning",
        "Pre-alpha",
        "pre-alpha",
        "Alpha",
        "alpha",
        "Beta",
        "beta",
        "Production",
        "production",
        "Released",
        "released",
        "Archived",
        "archived",
        "Stable",
        "stable",
        "Mature",
        "mature",
        "Inactive",
        "inactive",
        "Magic",
        "magic"
      ]
    },
    "name": {
      "title": "專案名稱（英文）",
      "description": "Project name",
      "type": "string",
      "minLength": 1
    },
    "name_zh": {
      "title": "專案名稱（中文）",
      "description": "Chinese project name",
      "type": "string",
      "minLength": 1
    },
    "description": {
      "title": "專案描述（英文）",
      "description": "Project description",
      "type": "string"
    },
    "description_zh": {
      "title": "專案描述（中文）",
      "description": "Chinese project description",
      "type": "string"
    },
    "homepage": {
      "title": "網頁",
      "description": "Homepage url",
      "type": "string",
      "format": "uri"
    },
    "thumbnail": {
      "title": "縮圖",
      "description": "Thumbnail",
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "type": "array", "items": { "type": "string", "format": "uri" } }
      ]
    },
    "document": {
      "title": "文件",
      "description": "Document",
      "type": "string",
      "format": "uri"
    },
    "repository": {
      "title": "Repo 工作資料區",
      "description": "Repository url",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["git", "hg", "svn", "cvs", "svk"]
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["type", "url"]
    },
    "licenses": {
      "title": "專案授權",
      "description": "Licenses",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" }
        },
        "required": ["type"]
      }
    },
    "keywords": {
      "title": "專案關鍵字",
      "description": "Keywords",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "audience": {
      "title": "目標受眾",
      "description": "Target audience",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["contributor", "public", "developer"]
      }
    },
    "products": {
      "title": "產出",
      "description": "Productions",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "partOf": {
      "title": "Part Of",
      "description": "Parent project",
      "type": "string"
    },
    "projects": {
      "title": "Projects",
      "description": "Parent projects",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "contributors": {
      "title": "貢獻者",
      "description": "Contributors",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "needs": {
      "title": "徵求支援",
      "description": "Needs",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["designer", "writer", "programmer", "money", "txt"]
      }
    }
  }
}
